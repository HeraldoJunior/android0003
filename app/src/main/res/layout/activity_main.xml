<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Dice!!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <TextView
        android:layout_margin="20sp"
        android:layout_gravity="center"
        android:text="Informe a quantidade de dados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekDados"
        android:layout_margin="10sp"
        android:min="1"
        android:max="4"
        android:progress="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/quantidadeDados"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="20sp"
        android:layout_gravity="center"
        android:text="Informe a quantidade de faces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekFaces"
        android:layout_margin="10sp"
        android:min="6"
        android:max="10"
        android:progress="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/quantidadeFaces"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/dados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fazerJogada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fazer jogada"
        android:layout_margin="20sp"
        android:layout_gravity="center">
    </Button>

    <TextView
        android:id="@+id/resultDice"
        android:hint="Resultado para a sua jogada"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="20sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>